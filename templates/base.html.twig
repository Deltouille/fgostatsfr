<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=MedievalSharp&display=swap" rel="stylesheet">
            <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.6.0.js"   integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="  crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="{{ asset('javascript/script.js') }}"></script>
        <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
        {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
      <main class="flex">
        <div class="flex flex-col justify-between w-1/6 h-screen bg-gray-800 fixed">
          <header class="bg-gray-800 py-4">
            <p style="color: white; font-size: 20px;" align="center">FGO-STATS FR</p>
          </header>
          <nav class="bg-gray-800 hover:scale-150">
            <ul>
              <li class="mt-3 hover:bg-gray-700" style="color: white; font-size: 20px;" align="center"><a href="{{ path('app_login') }}">Connexion</a></li>
              <li class="mt-3 hover:bg-gray-700" style="color: white; font-size: 20px" align="center"><a href="{{ path('profil_utilisateur') }}">Mon Profil</a></li>
              <li class="mt-3 hover:bg-gray-700" style="color: white; font-size: 20px" align="center"><a href="{{ path('servantCollection') }}">Mes Servants</a></li>
              <li class="mt-3 hover:bg-gray-700" style="color: white; font-size: 20px" align="center"><a href="">Mes Crafts Essences</a></li>
              <hr>
              <li class="mt-3 hover:bg-gray-700" style="color: white; font-size: 20px" align="center"><a href="{{ path('liste-servant') }}">Liste des Servants</a></li>
              <li class="mt-3 hover:bg-gray-700" style="color: white; font-size: 20px" align="center"><a href="">Liste des Crafts Essences</a></li>
            </ul>
          </nav>
          <footer class="mt-auto bg-gray-800 py-4">
            <p style="color: white;" align="Center"><a href="https://github.com/Deltouille/fgostatsfr">Github du projet</a></p>
          </footer>
        </div>
        <div class="w-1/6"></div>
        <div class="flex flex-col justify-between w-5/6 bg-red-400 ">
          <header class="bg-blue-700 py-4">
            {% block ContentHeader %}

            {% endblock %}
          </header>
          <section class="bg-gray-400">
            {% block body %}

            {% endblock %}
          </section>
          <footer class="mt-auto bg-pink-300 py-4">
            {% block ContentFooter %}

            {% endblock %}
          </footer>
        </div>
      </main>
    </body>
    {% block JS %}

    {% endblock %}
</html>

{# layout by https://www.notimedad.dev/tailwind-flex-layout-starter-page/ #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=MedievalSharp&display=swap" rel="stylesheet">
            {# <link href="https://cdn.tailwindcss.com" rel="stylesheet"> #}
            <script src="https://cdn.tailwindcss.com"></script>
            <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.11.3/datatables.min.css"/>
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
          <script src="https://code.jquery.com/jquery-3.6.0.js"   integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="  crossorigin="anonymous"></script>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
          <script src="{{ asset('javascript/script.js') }}"></script>
          <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
          <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.11.3/datatables.min.js"></script>
          <script src="https://cdnjs.cloudflare.com/ajax/libs/twig.js/1.15.0/twig.min.js" integrity="sha512-R9w7cGfL8kjpDIAhW2Mgji+lbq06vKWJX/Qztpq0ya5tD8YMGvRS2fco4p2EYTy93V/lDwp7hRnlHVkCyIrnHw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
          {{ encore_entry_script_tags('app') }}
        {% endblock %}
      <style>
      ::-webkit-scrollbar {
        width: 12px; /* width of the entire scrollbar */
        
      }

      ::-webkit-scrollbar-track {
        background: #6151c9; /* color of the tracking area */
      }

      ::-webkit-scrollbar-thumb {
        background-color: #392c8f; /* color of the scroll thumb */
        border-radius: 20px; /* roundness of the scroll thumb */
      }
      </style>
    </head>
    <body class="bg-fgo-darkblue">
      <main class="flex">
        <div class="flex flex-col justify-between w-1/6 h-screen bg-fgo-darkblue2 fixed xs:hidden shadow-lg sm:hidden lg:block">
          <header class="bg-fgo-darkblue2 py-4">
            <p style="color: white; font-size: 20px;" align="center">FGO-STATS FR</p>
          </header>
          <nav class="bg-fgo-darkblue2">
            <ul>
              <li class="mt-3 hover:bg-gray-700" style="color: white; font-size: 20px;" align="center"><a href="{{ path('app_login') }}">Connexion</a></li>
              <li class="mt-3 hover:bg-gray-700" style="color: white; font-size: 20px" align="center"><a href="{{ path('profil_utilisateur') }}">Mon Profil</a></li>
              <li class="mt-3 hover:bg-gray-700" style="color: white; font-size: 20px" align="center"><a href="{{ path('servantCollection') }}">Mes Servants</a></li>
              <li class="mt-3 hover:bg-gray-700" style="color: white; font-size: 20px" align="center"><a href="{{ path('craftEssenceCollection') }}">Mes Crafts Essences</a></li>
              <hr>
              <li class="mt-3 hover:bg-gray-700" style="color: white; font-size: 20px" align="center"><a href="{{ path('liste-servant') }}">Servants</a></li>
              {# <div class="hidden" id="menuListeCraftEssences"> #}
              <li class="mt-3 hover:bg-gray-700" style="color: white; font-size: 20px" align="center"><a href="{{ path('craft_essence') }}">Crafts Essences</a></li>
              {# </div> #}
            </ul>
          </nav>
          <footer class="mt-auto bg-fgo-darkblue py-4">
            <p style="color: white;" align="Center"><a href="https://github.com/Deltouille/fgostatsfr">Github du projet</a></p>
          </footer>
        </div>
        <div class="lg:w-1/6"></div>
        <div class="flex flex-col justify-between w-full lg:w-5/6 bg-red-400 ">
          <header class="bg-fgo-darkblue2 py-4">
            {% block ContentHeader %}

            {% endblock %}
          </header>
          <section class="bg-fgo-darkblue">
            {% block body %}

            {% endblock %}
          </section>
          <footer class="mt-auto bg-fgo-darkblue">
            {% block ContentFooter %}

            {% endblock %}
          </footer>
        </div>
      </main>
    </body>
    {% block JS %}
    <script>
      $(document).ready(function(){
        $('#menuCraftEssence').hover(function(){
          console.log('oui');
          $('#menuListeCraftEssences').toggleClass("hidden");
        });
      });
    </script>
    {% endblock %}
</html>


{% extends 'base.html.twig' %}

{% block title %}Hello HistoriqueController!{% endblock %}

{% block body %}
    <div class="" align="center">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {# Les erreurs générales du formulaire #}
        {{ form_errors(form) }}
        <div class="w-4/5" style="margin-top: 2rem;">
            {# Génération du label #}
            {{ form_label(form.quartz, "Nombre de Quartz :", {'label_attr': {'class': 'text-xl text-fgo-textblue'}}) }}
            {# Affichage des erreurs pour ce champ précis #}
            {{ form_errors(form.quartz) }}
            <div class="">
                {# Génération de l'input. #}
                {{ form_widget(form.quartz, {'attr': {'class': 'border py-2 px-4 rounded-lg shadow-lg w-4/5 lg:w-full'}}) }}
            </div>
        </div>
        <div class="w-4/5" style="margin-top: 2rem;">
            {# Génération du label #}
            {{ form_label(form.image, "Image de couverture :", {'label_attr': {'class': 'text-xl text-fgo-textblue'}}) }}
            {# Affichage des erreurs pour ce champ précis #}
            {{ form_errors(form.image) }}
            <div class="text-xl text-fgo-textblue">
                {# Génération de l'input. #}
                {{ form_widget(form.image, {'attr': {'class': 'border py-2 px-4 rounded-lg shadow-lg w-4/5 lg:w-full', 'placeholder': 'Image...'}}) }}
            </div>
        </div>
        <div class="w-4/5" style="margin-top: 2rem;">
            {# Génération du label #}
            {{ form_label(form.typeOCR, "Image de couverture :", {'label_attr': {'class': 'text-xl text-fgo-textblue'}}) }}
            {# Affichage des erreurs pour ce champ précis #}
            {{ form_errors(form.typeOCR) }}
            <div class="text-xl text-fgo-textblue">
                {# Génération de l'input. #}
                {{ form_widget(form.typeOCR, {'attr': {'class': 'border py-2 px-4 rounded-lg shadow-lg w-4/5 lg:w-full text-black', 'placeholder': 'Image...'}}) }}
            </div>
        </div>
        {{ form_widget(form.Valider, {'attr': {'class': 'bg-green-500 hover:bg-green-400 text-white font-bold py-2 px-7 border-b-4 border-green-700 hover:border-green-500 rounded my-4'}}) }}
        {# Fermeture de la balise <form> de formulaire HTML #}
        {{ form_end(form) }}
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>S'inscrire</h1>
    <div class="p-10 bg-white rounded flex justify-center items-center flex-col shadow-md mr-5">
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, {'attr': {'class': 'mb-5 p-3 w-80 focus:border-purple-700 rounded border-2 outline-none'}}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe',
            'attr': {'class': 'mb-5 p-3 w-80 focus:border-purple-700 rounded border-2 outline-none'}
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="bg-purple-600 hover:bg-purple-900 text-white font-bold p-2 rounded w-80">Register</button>
    {{ form_end(registrationForm) }}
    <p style="color: blue;"><a href="{{ path('app_register') }}">Retour a la page de connexion</a></p>
    </div>
{% endblock %}
